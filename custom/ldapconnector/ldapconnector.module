                                }
                        } else {
                                $confirm = 'Il existe déjà ' . $nbresultats . ' résultat pour ce groupe/identifier, on ne peut le créer. Voici les détails LDAP du groupe existant :' . print_r($data);
                                $messenger->addMessage($confirm);
                        }
