function ldapconnector_modif_password_submit(array &$form, \Drupal\Core\Form\FormStateInterface $form_state)
{
        // Récupérer l'ID utilisateur transmis dans les paramètres.
        $id_u = $form['actions']['modif_password']['#id_u'];

        // Appeler la fonction personnalisée pour modifier le mot de passe.
        modif_password_user_pastell($id_u);

        // Message de confirmation.
        \Drupal::messenger()->addMessage(t("Le mot de passe a été modifié avec succès pour l'utilisateur ID : @id", ['@id' => $id_u]));
}

function ldapconnector_user_redirect_to_edit(array &$form, FormStateInterface $form_state)
{
        $user = $form_state->getFormObject()->getEntity();

        // Sauvegarde de l'utilisateur pour obtenir l'ID.
        if ($user->isNew()) {
                $user->save();
        }

        // Vérifier si l'utilisateur a le groupe "Pastell" sélectionné.
        $user_groups = $user->get('field_groupes_applicatifs')->getValue(); // Remplacez 'field_user_groups' par le nom exact du champ de groupe.
        $has_pastell = false;
        $user_coll = $user->get('field_collectivite')->getValue();

        foreach ($user_groups as $group) {

                if (isset($group['target_id']) && $group['target_id'] === '67') { // Remplacez 'pastell' par l'ID ou le nom réel du groupe.
                        $has_pastell = true;
                        break;
                }
        }
        if ($has_pastell) {
                $form_state->setRedirect('entity.user.edit_form', [
                        'user' => $user->id(),
                ]);
        } else {
                // Rediriger vers le formulaire d'édition de l'utilisateur nouvellement créé.
                $form_state->setRedirectUrl(\Drupal\Core\Url::fromUri('internal:/collectivite/' . $user_coll[0]["target_id"]));
        }
}

